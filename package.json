{
  "name": "we-send-email",
  "description": "Npm package to send emails with sails.js used on We.js",
  "version": "0.0.6",
  "dependencies": {
    "email-templates": "~1.1.0",
    "lodash": "~2.4.1",
    "nodemailer": "1.1.1",
    "nodemailer-smtp-transport": "^0.1.12"
  },
  "main": "./lib/index.js",
  "scripts": {
    "lint": "./node_modules/.bin/jshint .",
    "checkStyle": "./node_modules/.bin/jscs .",
    "pretest": "npm run-script lint && npm run-script checkStyle",
    "test": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha test",
    "posttest": "./node_modules/.bin/istanbul check-coverage && rm -rf coverage",
    "prepublish": "npm test && npm prune"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "author": "Afro <contato@albertosouza.net>",
  "license": "ISC",
  "devDependencies": {
    "istanbul": "^0.2.7",
    "jscs": "^1.4.5",
    "jshint": "^2.5.0",
    "mocha": "^1.18.2",
    "should": "^4.0.4",
    "sinon": "^1.10.3"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:albertosouza/we-send-email.git"
  }
}
